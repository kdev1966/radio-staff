      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://192.168.1.200/*",
        "http://192.168.1.200",
        "http://localhost/*",
        "http://localhost"
      ],
      "webOrigins": [
        "http://192.168.1.200",
        "http://localhost",
        "+"
